<article class="post-item">
  <h2><%= item.title %></h2>
  <p class="post-item-author">By <%= item.author_name %></p>
  <p><%= item.summary %></p>
  <div class="post-actions">
    <form action="/posts/<%= item.id %>/delete" method="POST">
      <button class="btn btn-alt">Delete Post</button>
    </form>
    <a href="/posts/<%= item.id %>/edit">Edit Post</a>
    <a class="btn" href="/posts/<%= item.id %>">View Post</a>
  </div>
</article>
